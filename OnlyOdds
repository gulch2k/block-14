//Create a function that accepts an array of numbers an returns the array of numbers sorted with only odd numbers.
// If there is only one odd number in the array, return an array with that single number.

const array = [2, 4, 6, 8, 11, 20, 15, 22];

function sortOdds(array) {
    return array.filter(num => num % 2 !== 0);
}

console.log(sortOdds(array));